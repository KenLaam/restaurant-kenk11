<!DOCTYPE html>
<html>
<head>
  <title>Restaurant KenK11</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-light bg-faded">
  <%= link_to 'Restaurant KenK11', root_path, class: "navbar-brand" %>
  <ul class="nav navbar-nav">
    <li class="nav-item <%= 'active' if current_page? menu_path %>">
      <%= link_to 'Menu', menu_path, class: 'nav-item nav-link' %>
    </li>
    <li class="nav-item <%= 'active' if current_page? contact_us_path %>">
      <%= link_to 'Contact Us', contact_us_path, class: 'nav-item nav-link' %>
    </li>
  </ul>
  <form class="form-inline pull-xs-right">
    <input class="form-control" type="text" placeholder="Search">
    <button class="btn btn-success-outline" type="submit">Search</button>
  </form>
</nav>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
