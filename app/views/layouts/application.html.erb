<!DOCTYPE html>
<html>
<head>
  <title>Restaurant KenK11</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-light bg-faded">
  <%= link_to 'Restaurant KenK11', root_path, class: "navbar-brand" %>
  <ul class="nav navbar-nav">
    <li class="nav-item <%= 'active' if current_page? menu_path %>">
      <%= link_to 'Menu', menu_path, class: 'nav-item nav-link' %>
    </li>
    <li class="nav-item <%= 'active' if current_page? contact_us_path %>">
      <%= link_to 'Contact Us', contact_us_path, class: 'nav-item nav-link' %>
    </li>
  </ul>
</nav>
<div class="container-fluid">
  <% if flash[:error] %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
  <% end %>
  <% if flash[:success] %>
      <div class="alert alert-success">
        <%= flash[:success] %>
      </div>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
