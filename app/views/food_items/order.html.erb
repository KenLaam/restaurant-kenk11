<%= simple_form_for (@order), :url => order_path do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
            <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :address %>
    <p>
      You order <%= @order.food_item.name %>. Price: <%= @order.food_item.price_currency %>
    </p>

    <%= f.button :submit, class: 'btn btn-success-outline' %>
    <%= link_to 'Back', root_path, class: "btn btn-secondary-outline" %>
<% end %>
