<div class="row">
  <div class="col-md-6">
    <div class="btn-group" role="group" aria-label="Basic example">
      <% Section.all.each do |section| %>
          <%= link_to section, menu_path(section: section), class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
  <div class="col-md-6" align="right">
    <div class="dropdown pull-right">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Sort by
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <%= link_to 'Alphabetical', menu_path(sort: 'name ASC', :section => params[:section]), class: 'dropdown-item' %>
        <%= link_to 'Price low to high', menu_path(sort: 'price ASC', :section => params[:section]), class: 'dropdown-item' %>
        <%= link_to 'Price high to low', menu_path(sort: 'price DESC', :section => params[:section]), class: 'dropdown-item' %>
      </div>
    </div>
  </div>
</div>
<br>
<div class="cards">
  <% @food_items.each do |food_item| %>
      <div class="card">
        <div class="card-image">
          <%= image_tag food_item.refactor_thumbnail, size: '200x160' %>
        </div>
        <div class="card-header">
          <%= link_to food_item.name, food_item_path(food_item) %>
        </div>
        <div class="card-copy">
          <p><%= food_item.description %></p>
          <span class="label label-pill label-info"><%= food_item.price_currency %></span>
        </div>
      </div>
  <% end %>
</div>
